# system aliases
alias q='exit'
alias e='$EDITOR'
alias l='ls -lah'
alias vnano='nano -Rv'
alias grepc='grep --color'
alias cr='tput reset && clear && echo'
alias r='tput reset && echo && neofetch'
alias lt='ls --human-readable --size -1 -S --classify'
alias im-comment='magick identify -quiet -format "%c"'

# cd aliases
alias ..='cd ..'
alias ...='cd ../..'

# git aliases
alias gr='git rm'
alias ga='git add'
alias gl='git log'
alias gp='git push'
alias gd='git diff'
alias gpl='git pull'
alias gs='git status'
alias gc='git commit'
alias gcm='git commit -m'
alias gcp='git add . && git commit & git push'

# yt-dlp aliases
alias yt='yt-dlp -4'
alias ytf='yt-dlp -4 -F'

alias yt-all='yt --embed-thumbnail \
                 --embed-metadata \
                 --embed-subs \
                 --embed-chapters \
                 --embed-info-json'

# make aliases
alias mc='make clean'
alias ma='make all -j2'
alias mu='sudo make uninstall'
alias mi='sudo make install -j2'
alias m='make clean && make all -j2 && sudo make install -j2'

# apt aliases
alias a='apt show'
alias ap='sudo apt purge'
alias au='sudo apt update'
alias ag='sudo apt upgrade'
alias ai='sudo apt install'

# dpkg aliases
alias dl='dpkg -L'

# wget aliases
alias wg='wget -4'
alias wc='wget -4 -c'
alias ws='wget -4 --spider'

# ln aliases
alias lns='ln -s'
alias lnr='ln -sr'
alias lnf='ln -srf'

# npm aliases
alias np='npm'
alias npu='npm update'
alias nps='npm search'
alias npi='npm install'
alias npug='npm update -g'
alias npig='npm install -g'
alias npis='npm install --save'

# other aliases
alias lf="lfrun"
